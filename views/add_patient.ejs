<%- include('include/header') %>
    <div class="container mt-5">
        <h1 align="center">Add Patient</h1>
        <% if(message) { %>
            <h5><%=message%></h5>
        <% } %>
        <form action="/add_patient" class="form-group" method="POST">
            <label for="patient_id">ID</label>
            <input type="text" name="id" class="form-control" placeholder="ID"  required>
            <br>
            <label for="firstname">Firstname</label>
            <input type="text" name="firstname" class="form-control" placeholder="Firstname"  required>
            <br>
            <label for="lastname">Lastname</label>
            <input type="text" name="lastname"class="form-control" placeholder="Lastname" required>
            <br>
            <label for="age">Age</label>
            <input type="text" name="age" class="form-control" placeholder="year ex: 1 , 2 , 3, 4"  required>
            <br>
            <label for="status">Status</label>
            <br>
            <div class="form-check form-check-inline mt-3">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="status" value="positive">
                <label class="form-check-label" for="inlineCheckbox1">Positive</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox2" name="status" value="negative">
                <label class="form-check-label" for="inlineCheckbox2">Negative</label>
              </div>
              <br>
              <br>
              <label for="hospital_id">Hospital Name</label>
              <select class="form-select mt-3" name="hospital_id" aria-label="Default select example ">
                <% hospitals.forEach(function(hospital) { %>
                <option value=<%=hospital.id%>><%=hospital.name%></option>
                <% })%>
              </select>
              <br>
            <input type="submit" class="btn btn-success" value="Enter">
        </form>        
    </div>

<%- include('include/footer') %>
